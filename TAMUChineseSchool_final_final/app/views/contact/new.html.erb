
<div class="authform">
  <%= form_for :contact, url: contact_path do |f| %>



      <div class="form-group">
        <%= f.label :Your_Name %>
        <%= f.text_area :name %>
      </div>

      <div class="form-group">
        <%= f.label :Your_Email_Address %>
        <%= f.email_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :Message %>
        <%= f.text_area :message %>
      </div>

      <%= f.submit 'Send', :class => 'button right' %>


  <% end %>
</div>


