<div class="col-sm-6">

<%= form_for(@event, :html => {'role' => 'form', :class => "form-horizontal"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this auto from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Year, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.datetime_select :year, { include_blank: false, twelve_hour: false, minute_step: 15, ampm: false,start_year: 2012, discard_day:true, discard_month:true,discard_hour:true, discard_minute:true }, style: "width: 45%;" %>

    </div>
  </div>
  <div class="form-group">
    <%= f.label :EventName, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :event_name, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Time, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :time, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Place, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :place, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Semester, class: "control-label col-sm-2" %>
    <div class="col-sm-10">

      <%= f.select :semester, ['Spring', 'Fall'] %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :event_description, class: "form-control"  %>
    </div>
  </div>
  <div class="actions row">
    <div class="col-md-2"></div>
    <div><%= f.submit 'Submit', class: "btn btn-primary" %></div>
  </div>
<% end %>

</div>
