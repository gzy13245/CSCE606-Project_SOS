<h1>Listing all users</h1>

<%= link_to 'New user', new_user_path %>
<br><br>

<table>
  <tr>
    <th>Last Name</th>
    <th>Last Name Chinese</th>
    <th>First Name</th>
    <th>First Name Chinese</th>
    <th>Gender</th>
    <th>Address</th>
    <th>Phone</th>
    <th>EMail</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.last_name %></td>
      <td><%= user.last_name_chn %></td>
      <td><%= user.first_name %></td>
      <td><%= user.first_name_chn %></td>
      <td><%= user.gender %></td>
      <td><%= user.address %></td>
      <td><%= user.phone %></td>
      <td><%= user.email %></td>

      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Delete', user_path(user),
                                 method: :delete, data: { confirm: 'Are you sure to delete?'}%></td>

    </tr>
  <% end %>
</table>